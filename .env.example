# IntelliCast AI Environment Configuration
# Copy this file to .env and configure your values

# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./backend/database.db

# AI/TTS Service Configuration
OLLAMA_BASE_URL=http://localhost:11434
CARTESIA_API_KEY=your-cartesia-api-key-here
CARTESIA_API_URL=https://api.cartesia.ai

# Module Feature Flags
# Enable/disable modular features
NEWS_AUDIO_ENABLED=true
PODCAST_GENERATION_ENABLED=true

# News Audio Module Configuration
NEWS_AUDIO_FETCH_INTERVAL=3600
NEWS_AUDIO_MAX_ARTICLES_PER_SOURCE=50
NEWS_AUDIO_DEFAULT_VOICE=en-US-female-1
NEWS_AUDIO_STORAGE_PATH=./backend/audio/news

# Authentication Configuration (if using external auth)
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Tavily API Configuration
# Get your API key from: https://tavily.com/
VITE_TAVILY_API_KEY=your-tavily-api-key-here

# External APIs (if needed)
NEWS_API_KEY=your-news-api-key-here
RSS_FEED_USER_AGENT=IntelliCast-AI/1.0

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./backend/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log